<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@mipmap/nv_title_bg"
                android:padding="10dp">

    <ImageView
        android:id="@+id/id_civ"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_cd"/>

    <TextView
        android:id="@+id/id_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_tv_level"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="pecuyu"
        android:textColor="#d000"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/id_tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="14dp"
        android:layout_toRightOf="@id/id_tv_name"
        android:text="Lv5"
        android:textColor="#9000"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/id_tv_checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="签到"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:background="@drawable/style_round_bound_tv"
        android:textColor="#9000"
        android:textSize="15sp"/>
</RelativeLayout>